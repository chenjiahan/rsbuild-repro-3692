{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "preserve",
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types/"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
